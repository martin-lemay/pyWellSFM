{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/martin-lemay/pyWellSFM/main/jsonSchemas/UncertaintyCurveSchema.json",
    "title": "Input Uncertainty Curve Data",
    "description": "Defines the input data to create an uncertainty curve.",
    "type": "object",
    "properties": {
        "format": {
            "description": "Defines the file content for verification purposes.",
            "const": "pyWellSFM.UncertaintyCurveData"
        },
        "version": {
            "description": "Defines the file content version.",
            "const": "1.0"
        },
        "data": {
            "description": "Curve definition.",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Name of the curve's x-axis.",
                    "type": "string"
                },
                "curves": {
                    "description": "Curves.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "$ref": "https://raw.githubusercontent.com/martin-lemay/pyWellSFM/main/jsonSchemas/CurveSchema.json"
                    }
                }
            },
            "required": [
                "name",
                "curves"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "format",
        "version",
        "data"
    ],
    "additionalProperties": false
}