{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/martin-lemay/pyWellSFM/main/jsonSchemas/RealizationData.json",
    "title": "Input Realization Data",
    "description": "Defines the input data to create a realization data object.",
    "type": "object",
    "properties": {
        "format": {
            "description": "Defines the file content for verification purposes.",
            "const": "pyWellSFM.RealizationData"
        },
        "version": {
            "description": "Defines the file content version.",
            "const": "1.0"
        },
        "well": {
            "oneOf": [
                {
                    "description": "Inline well definition.",
                    "$ref": "https://raw.githubusercontent.com/martin-lemay/pyWellSFM/main/jsonSchemas/WellSchema.json"
                },
                {
                    "type": "object",
                    "description": "Path to a well file.",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "Relative or absolute path to the well file."
                        }
                    },
                    "required": [
                        "url"
                    ],
                    "additionalProperties": false
                }
            ]
        },
        "initialBathymetry": { 
            "type": "number",
            "description": "Initial bathymetry at the well location (in meters)."
        },
        "subsidenceCurve": {
            "type": "object",
            "description": "Subsidence curve.",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["cumulative", "rate"],
                    "description": "Type of subsidence values: Either 'cumulative' or 'rate'."
                },
                "curve": {
                    "oneOf": [
                        {
                            "description": "Inline curve definition.",
                            "$ref": "https://raw.githubusercontent.com/martin-lemay/pyWellSFM/main/jsonSchemas/CurveSchema.json"
                        },
                        {
                            "type": "object",
                            "description": "Path to a curve.",
                            "properties": {
                                "url": {
                                    "type": "string",
                                    "description": "Relative or absolute path to the curve file."
                                }
                            },
                            "required": [
                                "url"
                            ],
                            "additionalProperties": false
                        }
                    ]
                }
            },
            "required": [
                "type",
                "curve"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "format",
        "version",
        "well",
        "initialBathymetry"
    ],
    "additionalProperties": false
}