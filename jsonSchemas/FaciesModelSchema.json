{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/martin-lemay/pyWellSFM/pyWellSFM/jsonSchemas/FaciesModelSchema.json",
    "title": "Input Facies Model Data",
    "description": "Defines the input data to create a facies model.",
    "type": "object",
    "properties": {
        "format": {
            "description": "Defines the file content for verification purposes.",
            "const": "pyWellSFM.FaciesModelData"
        },
        "version": {
            "description": "Defines the file content version.",
            "const": "1.0"
        },
        "faciesModel": {
            "description": "Facies model definition.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the facies.",
                        "type": "string"
                    },
                    "criteriaType": {
                        "description": "Type of criteria used to define the facies. If omitted, defaults to 'uncategorized'.",
                        "allOf": [
                            {
                                "$ref": "#/$defs/CriteriaType"
                            }
                        ]
                    },
                    "criteria": {
                        "description": "List of criteria used to define the facies (must contain at least one criteria).",
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "$ref": "#/$defs/FaciesCriterion"
                        }
                    }
                },
                "required": [
                    "name",
                    "criteria"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "format",
        "version",
        "faciesModel"
    ],
    "additionalProperties": false,
    "$defs": {
        "CriteriaType": {
            "type": "string",
            "enum": [
                "sedimentological",
                "petrophysical",
                "environmental",
                "uncategorized"
            ]
        },
        "FaciesCriterion": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "Property name used as a criteria.",
                    "type": "string"
                },
                "type": {
                    "description": "Criteria type. If omitted, defaults to 'uncategorized'.",
                    "allOf": [
                        {
                            "$ref": "#/$defs/CriteriaType"
                        }
                    ]
                },
                "minRange": {
                    "description": "Minimum value of the property. If omitted, defaults to -infinity in the Python model.",
                    "type": "number"
                },
                "maxRange": {
                    "description": "Maximum value of the property. If omitted, defaults to +infinity in the Python model.",
                    "type": "number"
                }
            },
            "required": [
                "name"
            ],
            "additionalProperties": false
        }
    }
}